{
    "openapi": "3.0.2",
    "info": {
        "title": "Call Logs API for Watson Assistant",
        "version": "1.0.1",
        "description": "API for managing call logs with Supabase backend"
    },
    "servers": [
        {
            "url": "https://{appname}.{projectid}.{region}.codeengine.appdomain.cloud",
            "description": "Code Engine deployment",
            "variables": {
                "appname": {
                    "default": "myapp",
                    "description": "application name"
                },
                "projectid": {
                    "default": "projectid", 
                    "description": "the Code Engine project ID"
                },
                "region": {
                    "default": "us-south",
                    "description": "the deployment region, e.g., us-south"
                }
            }
        },
        {
            "url": "http://127.0.0.1:{port}",
            "description": "local test server",
            "variables": {
                "port": {
                    "default": "5000",
                    "description": "local port to use"
                }
            }
        }
    ],
    "paths": {
        "/call-logs": {
            "get": {
                "summary": "Retrieve all call logs",
                "description": "Returns a list of all call logs with an HTML table representation",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful retrieval of call logs",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "table": {
                                            "type": "string",
                                            "description": "HTML table representation of call logs"
                                        },
                                        "call_logs": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/CallLog"
                                            }
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new call log",
                "description": "Add a new call log entry to the database",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CallLogInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully created call log",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CallLog"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/call-logs/{log_id}": {
            "get": {
                "summary": "Retrieve a specific call log",
                "description": "Returns a specific call log by its ID",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "log_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful retrieval of call log",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CallLog"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Call log not found"
                    }
                }
            },
            "put": {
                "summary": "Update a call log",
                "description": "Update an existing call log entry",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "log_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CallLogInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully updated call log",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CallLog"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Call log not found"
                    }
                }
            },
            "delete": {
                "summary": "Delete a call log",
                "description": "Remove a specific call log by its ID",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "log_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully deleted call log",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Call log not found"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "API_TOKEN"
            }
        },
        "schemas": {
            "CallLog": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "account_no": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "call_type": {
                        "type": "string"
                    },
                    "sentiment_analysis": {
                        "type": "string"
                    },
                    "audio_filename": {
                        "type": "string"
                    },
                    "tone": {
                        "type": "string"
                    },
                    "transcriptions": {
                        "type": "string"
                    }
                }
            },
            "CallLogInput": {
                "type": "object",
                "required": [
                    "account_no",
                    "call_type"
                ],
                "properties": {
                    "account_no": {
                        "type": "string"
                    },
                    "call_type": {
                        "type": "string"
                    },
                    "sentiment_analysis": {
                        "type": "string"
                    },
                    "audio_filename": {
                        "type": "string"
                    },
                    "tone": {
                        "type": "string"
                    },
                    "transcriptions": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
